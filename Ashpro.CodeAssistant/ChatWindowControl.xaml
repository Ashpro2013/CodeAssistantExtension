<UserControl x:Class="Ashpro.CodeAssistant.ChatWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="750" d:DesignWidth="900" x:Name="frmMain" Loaded="frmMain_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid  Grid.Column="0" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                <TextBlock Text="Server :" Background="White" FontWeight="Bold" FontSize="16"/>
                <TextBox x:Name="txtServer"  Width="190"  Margin="5,0,2,0"/>
                <Button x:Name="btnServer" Content="...." Width="30" Click="OnServerClick" Margin="5,0,0,0"/>
            </StackPanel>
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5">
                <TextBlock Text="Database :" Background="White" FontWeight="Bold" FontSize="16"/>
                <ComboBox x:Name="cmbDatabases" Width="170" Margin="5,0,2,0" SelectionChanged="DatabaseSelected"/>
                <Button x:Name="btnDatabase" Content="...." Width="30" Click="OnDatabaseClick" Margin="5,0,0,0"/>
            </StackPanel>
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="5">
                <TextBlock Text="Table :" Background="White" FontWeight="Bold" FontSize="16"/>
                <ComboBox x:Name="cmbTables" Width="200" Margin="5,0,2,0" SelectionChanged="TableSelected"/>
                <Button x:Name="btnTable" Content="+" FontSize="20" Width="30" Click="OnTableClick" Margin="5,0,0,0"/>
            </StackPanel>
            <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="5">
                <TextBlock Text="Variables :" Background="White" FontWeight="Bold" FontSize="16"/>
                <ComboBox x:Name="cmbVariables" Width="205" Margin="5,0,0,0" KeyDown="cmbVariables_KeyDown" IsEditable="True" StaysOpenOnEdit="True" IsTextSearchEnabled="True" />
            </StackPanel>
            <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="5">
                <TextBlock Text="Size :" Background="White" FontWeight="Bold" FontSize="16"/>
                <TextBox x:Name="txtSize"  Width="170"  Margin="5,0,2,0"/>
                <Button Content="Add" FontSize="20" Width="60" Click="OnAddClick" Margin="5,0,0,0"/>
            </StackPanel>
            <DataGrid x:Name="dgvVariables" RowHeaderWidth="0" RowHeight="25"  IsReadOnly="True" AutoGenerateColumns="False" Grid.Row="5"  Background="White"  AlternatingRowBackground="LightGray" Margin="0" >
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Height" Value="30"/>
                        <Setter Property="FontFamily" Value="Arial"/>
                        <Setter Property="FontSize" Value="14"/>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding ColumnName}" Width="*" />
                    <DataGridTextColumn Header="Data Type" Binding="{Binding SQLDType}" Width="120" />
                    <!-- Omit the City column if you don't want to display it -->
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Grid.Row="6" Orientation="Horizontal" Margin="5">
                <TextBlock Text="Action :" Background="White" FontWeight="Bold" FontSize="16"/>
                <ComboBox x:Name="cmbType" Width="230" Margin="5,0,0,0">
                    <ComboBoxItem Content="Entity Creation"/>
                    <ComboBoxItem Content="ContextHelper"/>
                    <ComboBoxItem Content="Script Generation"/>
                    <ComboBoxItem Content="Script Schema"/>
                    <ComboBoxItem Content="Script Generation with FK"/>
                    <ComboBoxItem Content="Script Schema with FK"/>
                    <ComboBoxItem Content="Script Table Data"/>
                    <ComboBoxItem Content="DBContext"/>
                    <ComboBoxItem Content="DBContext With SP"/>
                    <ComboBoxItem Content="Multi Entity Creation"/>
                    <ComboBoxItem Content="DBContext Single"/>
                    <ComboBoxItem Content="Master Form Code"/>
                </ComboBox>
            </StackPanel>
            <WrapPanel Grid.Row="7" Margin="5">
                <Button Content="Generate" Width="60" Height="40" Click="OnGenerateClick" Margin="5"/>
                <Button Content="Copy" Width="60" Height="40" Click="OnCopyClick" Margin="5"/>
                <Button Content="Clear" Width="60" Height="40" Click="OnClearClick" Margin="5"/>
                <Button Content="Apply" Width="60" Height="40" Click="OnApply" Margin="5"/>
            </WrapPanel>
        </Grid>
        <Grid x:Name="main" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="140"/>
            </Grid.RowDefinitions>
            <TextBox x:Name="txtGeneratedCode" Grid.Row="0" Margin="5" AcceptsReturn="True" IsReadOnly="True" VerticalScrollBarVisibility="Auto"/>
            <DataGrid x:Name="dgSubItems" RowHeaderWidth="0" RowHeight="25"  IsReadOnly="True" AutoGenerateColumns="False" Grid.Row="5"  Background="White"  AlternatingRowBackground="LightGray" Margin="0" >
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Height" Value="30"/>
                        <Setter Property="FontFamily" Value="Arial"/>
                        <Setter Property="FontSize" Value="14"/>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Width="*"  />
                    <DataGridTemplateColumn Header=" ">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="X"
                    Click="Delete_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>
